/**index.wxss**/

page {
  background-color: #f5f5f5;
}

.usermotto {
  margin-top: 20px;
}

.usertask {
  width: 750rpx;
  height: 388rpx;
  background: rgba(255, 255, 255, 1);
  background: rgba(255, 255, 255, 1);
  margin: 20rpx auto;
  padding: 30rpx;
  box-sizing: border-box;
}

.content_part {
  width: 100%;
  height: 270rpx;
  overflow: hidden;
  border-bottom: 1px solid #d9d9d9;
}

.cover {
  position: relative;
  width: 180rpx;
  height: 240rpx;
  background: rgba(72, 72, 72, 0.51);
  border-radius: 4rpx;
  margin-right: 20rpx;
  float: left;
}

image.cover_image {
  width: 180rpx;
  height: 240rpx;
  background: rgba(72, 72, 72, 0.51);
  border-radius: 4rpx;
  position: absolute;
  z-index: 1;
}

.task_type {
  width: 100%;
  text-align: center;
  font-size: 36rpx;
  color: #fff;
  font-weight: 400;
  z-index: 999;
  position: absolute;
  top: 108rpx;
}

.end_time {
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 1);
  z-index: 999;
  position: absolute;
  top: 158rpx;
}

.isFinished {
  width: 94rpx;
  height: 48rpx;
  font-size: 24rpx;
  text-align: center;
  color: rgba(255, 255, 255, 1);
  line-height: 48rpx;
  border-radius: 0rpx 200rpx 200rpx 0rpx;
  position: absolute;
  z-index: 999;
  top: 20rpx;
}

.isFinished_no {
  background: rgba(133, 152, 251, 1);
}

.isFinished_yes {
  background: rgba(154, 208, 72, 1);
}

.intro_wrap {
  width: 490rpx;
  float: left;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  color: rgba(38, 38, 38, 1);
  font-weight: 500;
}

.intro {
  font-size: 28rpx;
  color: rgba(153, 153, 153, 1);
  margin-top: 18rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.interact {
  height: 86rpx;
  line-height: 86rpx;
  font-size: 32rpx;
  color: #999;
}

.interact text {
  width: 48%;
  height: 86rpx;
  text-align: center;
  display: inline-block;
}

.swiper-tab {
  width: 100%;
  text-align: center;
  height: 92rpx;
  line-height: 92rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  background: #fff;
}

.swiper-tab-item {
  width: 30%;
  color: #434343;
}
.active {
  color: #f65959;
}

.swiper-box{ display: block; height: 100%; width: 100%; overflow: hidden; } 