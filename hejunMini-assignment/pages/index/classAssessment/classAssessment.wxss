/* pages/index/classAssessment/classAssessment.wxss */
page {
  background-color: #f5f5f5;
}

.assignment_card {
  width: 100%;
  height: 312rpx;
  background: #fff;
  padding: 30rpx;
  box-sizing: border-box;
  margin: 20rpx auto;
}

.personal {
  width: 100%;
  height: 80rpx;
  overflow: hidden;
}

.personal .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  float: left;
  margin-right: 20rpx;
}

.personal .info {
  height: 80rpx;
  float: left;
}

.name {
  font-size: 32rpx;
  color: rgba(38, 38, 38, 1);
}

.other_info {
  width: 100%;
  height: 80rpx;
  overflow: hidden;
  font-size: 24rpx;
  color: rgba(153, 153, 153, 1);
}

.task {
  height: 142rpx;
  font-size: 32rpx;
  color: rgba(51, 51, 51, 1);
  line-height: 48rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  margin-top: 34rpx;
}

.link {
  color: #789cee;
}